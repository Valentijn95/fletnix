<!DOCTYPE html>
<html>
  <head>
    <title>Fletnix</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

      <div class="alerts" data-controller="alert">
        <p id="notice" class="alert alert-info" data-alert-target="notice"><%= notice %></p>
        <p id="alert" class="alert alert-danger" data-alert-target="alert"><%= alert %></p>
      </div>

  <div class="container mb-5 mt-3" >
    <div class="row justify-content-between mb-5">
        <% if user_signed_in? %>
          <div class="col-2"><%= button_to "log out",  destroy_user_session_path, method: :delete, class: 'btn btn-warning' %></div>
          <div class="col-2"><%= link_to "Profile",  edit_user_registration_path, class: 'btn btn-primary' %></div>
        <% else %>
          <div class="col-2"><%= button_to "sign in", new_user_session_path, method: :get, class: 'btn btn-primary' %></div>
          <div class="col-2"><%= button_to "sign up", new_user_registration_path, method: :get, class: 'btn btn-primary'%></div>
        <% end %>
    </div>
  </div>


  <div class="container"><%= yield %></div>

    <%# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> %>


  </body>
</html>
